= form_for(@application) do |f|
  - if @application.errors.any?
    #error_explanation
      h2
        = pluralize(@application.errors.count, "error")
        | prohibited this application from being saved:
      ul
        - @application.errors.full_messages.each do |msg|
          li= msg
  .field
    = f.label :message
    br/
    = f.text_area :message
  .field
    = f.hidden_field :vacancy_id, :value => @application.vacancy_id
  .field
    = f.hidden_field :player_id, :value => @application.player_id
  .field
    = f.hidden_field :status, :value => Application.SENT
  .actions
    = f.submit
