<h1>Inicia sesión</h1>

<% if alert %>
	<div class="alert">
		<%= alert %>
	</div>
<% end -%>

<%# al no tener un recurso, la URL a la que nos lleve el formulario
no será a la acción create, sino a la misma URL actual (session/new) %>
<%= form_for :session, url: session_path do |f| -%>
	<div>
    	<%= f.label :nick %>
    	<%= f.text_field :nick, value: params[:session].try(:[], :nick) %>
	</div>
	<div>
  	<%= f.label :password %>
  	<%= f.password_field :password %>
	</div>
	<%= f.submit "Log in!" %>
<% end -%>

<p> 
  No account yet? 
</p>
<p> 
  Sign up <%= link_to 'here' , new_player_path %>
</p>