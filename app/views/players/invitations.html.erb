<h1><%= @player.nick %></h1>
<h2>Invitations</h2>
<hr/>


<% if @invitations.count > 0 %>
  <table>
    <thead>
      <tr>
        <th>Team</th>
        <th>Role</th>
        <th>Message</th>
        <th>Date</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @invitations.each do |inv| %>
        <tr>
          <% team = inv.team %>
          <td><%= link_to team.short_name, team_path(team) %></td>
          <td><%= inv.role_s %></td>
          <td><%= inv.message %></td>
          <td><%= inv.created_at %></td>
          <% if current_user.id == inv.player_id %>
            <td><%= link_to "Accept", accept_invitation_path(inv), method: :post %></td>
            <td><%= link_to "Reject", decline_invitation_path(inv), method: :post %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no invitations.</p>
<% end %>