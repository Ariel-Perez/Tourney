<h1><%= link_to @team.short_name, team_path(@team) %></h1>
<h2><%= link_to @team.name, team_path(@team) %></h2>

<h3>Vacancy: <%= @vacancy.role_s %></h3>
<h3>Requirements</h3>
<p>
  <%= @vacancy.requirements %>
</p>


<% if @applications.count > 0 %>
  <% if current_user and @in_team %>
    <h3>Applications</h3>
    <table>
      <thead>
        <tr>
          <th>Player</th>
          <th>Country</th>
          <th>Message</th>
          <th>Date</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @applications.each do |app| %>
          <tr>
            <td><%= link_to app.player.nick, player_path(app.player) %></td>
            <td><%= app.player.country %></td>
            <td><%= app.message %></td>
            <td><%= app.created_at %></td>
            <% if current_user.id == @team.player_id %>
              <td><%= link_to "Accept", accept_application_path(app), method: :post %></td>
              <td><%= link_to "Reject", reject_application_path(app), method: :post %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% else %>
  <h3>There are currently no applications for this vacancy.</h3>
<% end %>

<% if @can_apply %>
  <h3>Apply!</h3>
  <%= render 'applications/form' %>
<% elsif @my_app %>
  <% if @my_app.status == Application.SENT %>
    <p>Your application has been sent.</p>
  <% elsif @my_app.status == Application.REJECTED %>
    <p>Your application was rejected.</p>
  <% end %>
<% end %>